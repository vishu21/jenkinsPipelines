pipeline {
  agent {
    docker {
      image 'node:18'
      label 'docker-agent'
    }
  }
  stages {
    stage('Check Node Version') {
      steps {
        sh 'node -v'
      }
    }
    stage('Run Sample JS Code') {
      steps {
        sh 'echo "console.log(\'Hello from inside Docker agent\')" > app.js'
        sh 'node app.js'
      }
    }
  }
}
